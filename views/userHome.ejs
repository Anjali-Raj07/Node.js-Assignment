<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>User Dashboard</title>
    <link rel="stylesheet" href="/css/style.css"> 
</head>
<body>
    <div class="container">
        <h1>User Dashboard</h1>
        <p>Welcome, <%= user.FirstName %>!</p>
        <nav>
            <a href="/addUser">
                <button class="btn-add">Add New User</button>
            </a>
    

            <a href="/userProfile/<%= loggedInUserId %>">
                <button class="btn-update">My Profile</button>
            </a>
            <a type="button" id="logoutButton" class="btnStyle" href="/user/logout">Logout</a>
        </nav>
         <!-- List of users -->
         <h2>List of Users</h2>
         <table>
             <thead>
                 <tr>
                     <th>First Name</th>
                     <th>Last Name</th>
                     <th>Email</th>
                     <th>Role</th>
                 </tr>
             </thead>
             <tbody>
                 <% users.forEach(user => { %>
                     <% if (user._id.toString() !== loggedInUserId.toString()) { %> 
                         <tr>
                             <td><%= user.FirstName %></td>
                             <td><%= user.LastName %></td>
                             <td><%= user.Email %></td>
                             <td><%= user.Role %></td>
                             
                         </tr>
                     <% } %>
                 <% }) %>
             </tbody>
         </table>
    </div>

    <script src="/socket.io/socket.io.js"></script>
    <script src="/js/script.js">
      
    </script>

</body>
</html>
