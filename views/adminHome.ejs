<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Admin Dashboard</title>
    <link rel="stylesheet" href="/public/css/style.css">
</head>
<body>
    <div class="container">
        <h1>Admin Dashboard</h1>
        <p>Welcome, <%= user.FirstName %>!</p>
        <a type="button" id="logoutButton" class="btnStyle" href="/user/logout">Logout</a>

        <a href="/updateUser/<%= loggedInUserId %>">
            <button class="btn-update">My Profile</button>
        </a>

        <a href="/addUserAdmin">
            <button class="btn-add">Add New User/Admin</button>
        </a>

        <!-- List of users -->
        <h2>List of Users</h2>
        <table>
            <thead>
                <tr>
                    <th>First Name</th>
                    <th>Last Name</th>
                    <th>Email</th>
                    <th>Role</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                <% users.forEach(user => { %>
                    <% if (user._id.toString() !== loggedInUserId.toString()) { %> 
                        <tr>
                            <td><%= user.FirstName %></td>
                            <td><%= user.LastName %></td>
                            <td><%= user.Email %></td>
                            <td><%= user.Role %></td>
                            <td>
                                <a href="/updateUser/<%= user._id %>">
                                    <button class="btn-update">Update</button>
                                </a>
                            </td>
                        </tr>
                    <% } %>
                <% }) %>
            </tbody>
        </table>
    </div>
</body>
</html>
