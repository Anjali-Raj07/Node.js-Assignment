<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Admin Dashboard</title>
    <link rel="stylesheet" href="/css/style.css">
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>

</head>

<body>
    <section>
        <div class="homePage">
            <header class="header">
                <div class="container">
                    <div class="headerFlex">

                        <h1>Admin Dashboard</h1>
                        <div class="headerButtons">

                            <a href="/updateUser/<%= loggedInUserId %>">
                                <button class="btnStyle">My Profile</button>
                            </a>

                            <a href="/addUserAdmin">
                                <button class="btnStyle">Add New User/Admin</button>
                            </a>
                            <a type="button" id="logoutButton" style="height: 20px;" class="btnStyle" href="/user/logout">Logout</a>


                        </div>
                    </div>
                </div>
            </header>
           <h3><p style="margin-left: 3%;">Welcome, <%= user.FirstName %>!</p></h3> 

            <!-- List of users -->
            <h2>List of Users</h2>
            <table style="width: 95%; margin-left: 3%;">
                <thead>
                    <tr>
                        <th>First Name</th>
                        <th>Last Name</th>
                        <th>Email</th>
                        <th>Role</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    <% users.forEach(user=> { %>
                        <% if (user._id.toString() !==loggedInUserId.toString()) { %>
                            <tr>
                                <td>
                                    <%= user.FirstName %>
                                </td>
                                <td>
                                    <%= user.LastName %>
                                </td>
                                <td>
                                    <%= user.Email %>
                                </td>
                                <td>
                                    <%= user.Role %>
                                </td>
                                <td>
                                    <a href="/updateUser/<%= user._id %>">
                                        <button class="btnStyle">Update</button>
                                    </a>
                                </td>
                            </tr>
                            <% } %>
                                <% }) %>
                </tbody>
            </table>
        </div>
    </section>
    <script src="/socket.io/socket.io.js"></script>
    <script src="/js/script.js">

    </script>
</body>

</html>